<li class="search-nav">
  <%= form_tag(root_path, method: :get) do %>
    <div class="input-group">
      <%= search_field_tag "q", params[:q], class: "form-control",
                        placeholder: "search keywords" %>
      <span class="input-group-btn">
        <%= submit_tag "Search", class: "btn btn-success" %>
      </span>
    </div>
  <% end %>
</li>
